// src/components/FilterPanel.jsx
import React from 'react';
import { Box, TextField, MenuItem, Grid, Button } from '@mui/material';

const FilterPanel = ({ filters, setFilters, onApply }) => {
  const handleChange = (e) => {
    setFilters({ ...filters, [e.target.name]: e.target.value });
  };

  return (
    <Box p={2}>
      <Grid container spacing={2}>
        <Grid item xs={3}>
          <TextField
            label="Project"
            name="project"
            select
            fullWidth
            value={filters.project || ''}
            onChange={handleChange}
          >
            <MenuItem value="">All</MenuItem>
            <MenuItem value="カンロPJ">カンロPJ</MenuItem>
            <MenuItem value="不二ビューティ">不二ビューティ</MenuItem>
          </TextField>
        </Grid>
        <Grid item xs={3}>
          <TextField
            label="Status"
            name="status"
            select
            fullWidth
            value={filters.status || ''}
            onChange={handleChange}
          >
            <MenuItem value="">All</MenuItem>
            <MenuItem value="修正依頼">修正依頼</MenuItem>
            <MenuItem value="新規">新規</MenuItem>
          </TextField>
        </Grid>
        <Grid item xs={3}>
          <TextField
            label="FJN側障害種別"
            name="fjnType"
            value={filters.fjnType || ''}
            fullWidth
            onChange={handleChange}
          />
        </Grid>
        <Grid item xs={3}>
          <Button variant="contained" fullWidth onClick={onApply}>
            適用
          </Button>
        </Grid>
      </Grid>
    </Box>
  );
};

export default FilterPanel;
